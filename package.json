{
    "name": "jsonl",
    "displayName": "JSON Lines",
    "description": "JSON Lines (jsonl) language support",
    "license": "MIT",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.64.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:jsonl"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "languages": [
            {
                "id": "jsonl",
                "aliases": [
                    "JSON Lines",
                    "jsonl",
                    "JSONL"
                ],
                "extensions": [
                    ".jsonl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "jsonl",
                "scopeName": "source.jsonl",
                "path": "./syntaxes/jsonl.tmLanguage.json",
                "embeddedLanguages": {
                    "line": "json"
                }
            }
        ]
    },
    "icon": "./icons/jsonl.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/Alpha4/jsonl.git"
    },
    "scripts": {
        "vscode:prepublish": "cd client && npm install && cd .. && npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
    },
    "devDependencies": {
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.12.0",
        "@typescript-eslint/eslint-plugin": "^4.23.0",
        "@typescript-eslint/parser": "^4.23.0",
        "eslint": "^7.26.0",
        "typescript": "^4.5.5"
    }
}
